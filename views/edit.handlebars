<h3>Edit user</h3>
{{#if message}}
<div class="row">
    <div class="col s6">
<h4 class="  green accent-4">{{message}}</h4>
<a href="/user/" type="button" class="btn indigo ">BACK TO USERS</a>
    </div>
</div>
{{/if}}
{{#if errors}}
<div class="row">
    <div class="col s6">
        <h4 class=" red accent-3 ">{{errors}}</h4>
        <a href="/user/" type="button" class="btn indigo ">BACK TO USERS</a>
    </div>
</div>

{{/if}}
<div class="row">
    <form class="col s6" method="POST" action="/user/update/{{id}}" >
        <div class="row">
            <div class="input-field col s6">
                <input placeholder="Placeholder" id="first_name" name="firstname" type="text" class="validate" value="{{firstname}}">
                <label for="first_name">First Name</label>
            </div>
            <div class="input-field col s6">
                <input id="last_name" type="text" name="lastname" class="validate" value="{{lastname}}" >
                <label for="last_name">Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="age" type="text" name="age" class="validate"value="{{age}}" >
                <label for="age">Age</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="email" type="email"  name="email" class="validate" value="{{email}}" >
                <label for="email">Email</label>
            </div>
        </div>
        <input id="email" type="submit" class="btn" value="UPDATE">
    </form>
</div>