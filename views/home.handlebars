<h3>LIST OF USERS </h3>
<a href="/user/new/addnew" type="button" class="btn indigo ">ADD USER</a>
 {{#if message}}
   <h4 class="red-text text-darken-4">{{mesage}}</h4>
 {{/if}}


<div class="row">
    <div class="col s12">
<table class="highlight" id="table1">
    <thead>
        <tr>
           
            <th>First Name</th>
            <th>Last Name</th>
            <td>CARD</td>
            <th>Email</th>
            <th>balance</th>
            <th>ACTION</th>
        </tr>
    </thead>

    <tbody>
        {{#each results as |result key|}}

        <tr>
           
            <td>{{result.firstname}}</td>
            <td>{{result.lastname}}</td>
            <td>{{result.card}}</td>
            <td>{{result.email}}</td>
            <td>{{result.balance}}</td>
            <td>

                <a href="/user/{{result._id}}" type="button" class="btn indigo">EDIT</a>
                <a href="/user/delete/{{result_id}}" type="button" class="btn pink accent-3">DELETE</a>


            </td>
        </tr>
    </tbody>
    {{else}}

      <p>No users to display</p>

    {{/each}}
    

       
</table>

    </div>
</div>
